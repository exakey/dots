    width:                       100%;
    height:                      100%;
    margin:                      0px;
    padding:                     0px;
    transparency:                "real";
    background-color:            black / 42%;
}

/* ----- Main Box ----- */
mainbox {
    orientation:                 vertical;
    children:                    [ "inputbar", "textbox-help", "message", "listview" ];
    background-color:            transparent;

    spacing:                      16px;
    margin:                       0px;
    padding:                      64px;
}

/* Inputbar --------------------------------------------------- */
inputbar {
    children:                    [ "dummy", "entry", "dummy" ];
    border-radius:               24px;

    spacing:                     0px;
    padding:                     128px 64px;
    orientation:                 horizontal;
    background-image:            url("~/.config/hyde/themes/Catppuccin Mocha/wallpapers/002.jpg", width);
}

dummy {
  background-color: transparent;
}

textbox-help {
    expand: false;
    content: " [CTRL DEL]  Delete \n [ALT DEL]   Wipe";

    border-radius:                 12px;
    background-color:              #313244;
    text-color:                    #F5E0DC;

    margin:                        0px;
    padding:                       6px;
}

